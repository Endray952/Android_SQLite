<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ID"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_background"
            android:gravity="center"
            android:text="ID"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/FilmID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_background"
            android:gravity="center"
            android:text="Film ID"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/CustomerID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_background"
            android:gravity="center"
            android:text="Customer ID"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/StartOfRent"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_background"
            android:gravity="center"
            android:text="Start of rent"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/EndOfRent"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_background"
            android:gravity="center"
            android:text="End of rent"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/CloseDate"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_background"
            android:gravity="center"
            android:text="Close date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/FlagNotReturned"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/table_background"
            android:gravity="center"
            android:text="Flag not returned"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>